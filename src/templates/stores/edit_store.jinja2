{% extends "base.jinja2" %}
{% block content %}
    <div class="page-header">
        <h1>Edit Store</h1>
    </div>
    <div class="form-size">
        <form method="POST">
            <div class="form-group">
                <label for="name">Store Name</label>
                <input type="text" class="form-control" id="name" name="name" placeholder="Store Name" value="{{ store.name }}">
            </div>
            <div class="form-group">
                <label for="url_prefix">Url</label>
                <input type="text" class="form-control" id="url_prefix" name="url_prefix" placeholder="Store URL" value="{{ store.url_prefix }}">
            </div>
            <div class="form-group">
                <label for="tag_name">Tag Name</label>
                <input type="text" class="form-control" id="tag_name" name="tag_name" placeholder="Tag Name" value="{{ store.tag_name }}">
            </div>
             <div class="form-group">
                <label for="query">Query</label>
                <input type="text" class="form-control" id="query" name="query" placeholder="Tag Name" value="{{ store.query | tojson }}">
            </div>
            <button type="submit" class="btn btn-default"><Update>Update</Update></button>
        </form>
    </div>
{% endblock %}