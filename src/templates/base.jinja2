<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Pricing _Services</title>
    {% include 'html_dependencies.jinja2' %}
</head>
<body>
<nav class="navbar navbar-default">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="#">Price</a>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li><a href="{{ url_for('stores.index')}}">Stores</a></li>
        <li><a href="{{ url_for('alerts.index')}}">Alerts</a></li>
      </ul>
        {% if session['email'] %}
        <ul class="nav navbar-nav navbar-right">
        <li><a href="{{ url_for('users.user_alerts')}}"><span class="glyphicon glyphicon-alert"></span>&nbsp;Your Alerts</a></li>
        <li><a href="{{ url_for('users.logout_user')}}"><span class="glyphicon glyphicon-log-out"></span>&nbsp;Log Out</a></li>
      </ul>
        {% else %}
        <ul class="nav navbar-nav navbar-right">
        <li><a href="{{ url_for('users.register_user')}}"><span class="glyphicon glyphicon-user"></span>&nbsp;Sign up</a></li>
        <li><a href="{{ url_for('users.login_user')}}"><span class="glyphicon glyphicon-log-in"></span>&nbsp;Login</a></li>
      </ul>
        {% endif %}
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>
<div class="content container">
    {% block content %}

    {% endblock %}
</div>

</body>
</html>